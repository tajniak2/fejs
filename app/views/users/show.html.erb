<h1>User <%= @user.email %></h1>
<% if @user.friends.current_user.exists? %>
  <%= link_to "Usuń ze znajomych", delete_user_from_friends %>
<% else %>
  <%= link_to "Dodaj do znajomych", add_user_to_friends %>
<% end %>
<% if @tweets.any? %>
  <%= render @tweets.current %>
<% else %>
  Użytkownik nie ma żadnych wpisów
<% end %>